  "description": "Modern Men Hair BarberShop - Regina's Premier Men's Grooming",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageDirectory=coverage",
    "test:ci": "npm run test:unit && npm run test:integration",
    "deploy:check": "tsx scripts/deploy-check.ts",
    "deploy:validate": "npm run deploy:check && npm run build",
    "deploy:build": "npm run payload:build && npm run build",
    "payload:build": "payload build --config ./payload-configs/production.ts",
    "payload:dev": "payload dev --config ./payload-configs/development.ts",
    "payload:generate-types": "payload generate:types --config ./payload-configs/production.ts",
        "seed:content": "SEED_API_KEY=$SEED_API_KEY tsx scripts/seed-content.ts",
    "seed": "SEED_API_KEY=$SEED_API_KEY tsx scripts/seed.ts",
    "seo:generate": "tsx scripts/generate-sitemap.ts",
    "smoke:check": "tsx scripts/smoke-check.ts",
    "db:migrate": "payload migrate",
    "db:push": "payload db push",
    "db:seed": "tsx src/scripts/seed-database.ts",
    "db:seed-admin": "tsx src/scripts/seed-admin.ts",
    "db:reset": "payload migrate:reset",
    "generate:types": "tsx src/tools/generate-payload-types.ts",
    "sync": "tsx src/scripts/sync-payload-schema.ts",
    "sync:migrate": "npm run sync migrate",
    "sync:drizzle": "npm run sync sync",
    "sync:backfill": "npm run sync backfill",
    "sync:environments": "npm run sync environments",
    "sync:status": "npm run sync status",
    "export:docs": "tsx src/scripts/export-docs.ts",
    "deploy:vercel": "tsx src/scripts/deploy-vercel.ts",
    "security:bootstrap": "tsx scripts/security-bootstrap.ts",
    "security:audit": "npm audit --audit-level moderate",
    "audit:help": "tsx src/tools/security-auditor.ts help",
    "audit:run": "REPO_LIST=. tsx src/tools/security-auditor.ts run --once",
    "audit:scan": "tsx src/tools/security-auditor.ts scan .",
    "audit:status": "tsx src/tools/security-auditor.ts status --repo .",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "storybook:chromatic": "npx chromatic --project-token=$CHROMATIC_PROJECT_TOKEN",
    "docker:build": "docker build -t modernmen-yolo .",
    "docker:run": "docker run -p 3000:3000 modernmen-yolo",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "bundle:analyze": "ANALYZE=true npm run build"
  },
