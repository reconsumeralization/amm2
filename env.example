# =================================================================
# Modern Men Hair BarberShop - Environment Configuration
# =================================================================
# Copy this file to .env.local and fill in your actual values

# =================================================================
# PAYLOAD CMS CONFIGURATION
# =================================================================

# Payload Secret Key (generate a secure random string)
PAYLOAD_SECRET=your-payload-secret-key-here

# Payload Admin Configuration
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database Configuration (choose one)
# SQLite (Development)
DATABASE_URL=./dev.db

# PostgreSQL (Production - for Payload)
POSTGRES_URL=postgresql://username:password@localhost:5432/modernmen_payload
DATABASE_URL=postgresql://username:password@localhost:5432/modernmen_payload

# =================================================================
# SUPABASE CONFIGURATION
# =================================================================

# Supabase Project URLs
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase Service Role Key (keep secret!)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Supabase JWT Secret (for custom authentication)
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# =================================================================
# AUTHENTICATION & SECURITY
# =================================================================

# NextAuth.js Configuration
NEXTAUTH_SECRET=your-nextauth-secret-key
NEXTAUTH_URL=http://localhost:3000

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=7d

# =================================================================
# PAYMENT PROCESSING
# =================================================================

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# PayPal Configuration (optional)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_ENVIRONMENT=sandbox

# =================================================================
# EMAIL & COMMUNICATIONS
# =================================================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SendGrid (alternative to SMTP)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@modernmen.com
SENDGRID_FROM_NAME=Modern Men Hair BarberShop

# Email Templates
EMAIL_FROM=noreply@modernmen.com
EMAIL_FROM_NAME=Modern Men Hair BarberShop

# =================================================================
# SMS & NOTIFICATIONS
# =================================================================

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Firebase Cloud Messaging (Push Notifications)
FCM_SERVER_KEY=your-fcm-server-key

# =================================================================
# FILE STORAGE & MEDIA
# =================================================================

# Cloudinary (Media Storage)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# AWS S3 (alternative to Cloudinary)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# =================================================================
# ANALYTICS & MONITORING
# =================================================================

# Google Analytics
GA_TRACKING_ID=GA-YOUR-TRACKING-ID

# Mixpanel
MIXPANEL_TOKEN=your-mixpanel-token

# Sentry (Error Monitoring)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# =================================================================
# EXTERNAL APIs & INTEGRATIONS
# =================================================================

# OpenAI (for AI features)
OPENAI_API_KEY=your-openai-api-key

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Social Media APIs
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token

# =================================================================
# DEVELOPMENT & DEBUGGING
# =================================================================

# Debug Mode
DEBUG=true
NODE_ENV=development

# Database Debug
DATABASE_DEBUG=false

# Payload Debug
PAYLOAD_DEBUG=false

# Supabase Debug
SUPABASE_DEBUG=false

# =================================================================
# PERFORMANCE & CACHING
# =================================================================

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Cache Configuration
CACHE_TTL=3600
CACHE_ENABLED=true

# =================================================================
# BACKUP & MAINTENANCE
# =================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Site is under maintenance

# =================================================================
# MULTI-TENANCY
# =================================================================

# Tenant Configuration
MULTI_TENANT_ENABLED=true
DEFAULT_TENANT=modernmen
TENANT_DOMAIN_SUFFIX=.modernmen.com

# =================================================================
# FEATURE FLAGS
# =================================================================

# Feature Toggles
FEATURE_BOOKING_ENABLED=true
FEATURE_PAYMENT_ENABLED=true
FEATURE_NOTIFICATIONS_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_AI_ENABLED=false

# =================================================================
# RATE LIMITING
# =================================================================

# API Rate Limits
API_RATE_LIMIT_WINDOW=15min
API_RATE_LIMIT_MAX=100

# Auth Rate Limits
AUTH_RATE_LIMIT_WINDOW=1h
AUTH_RATE_LIMIT_MAX=5

# =================================================================
# LOGGING & AUDIT
# =================================================================

# Log Level
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=365

# =================================================================
# DEPLOYMENT
# =================================================================

# Vercel Configuration
VERCEL_TOKEN=your-vercel-token
VERCEL_PROJECT_ID=your-vercel-project-id
VERCEL_ORG_ID=your-vercel-org-id

# Docker Configuration
DOCKER_REGISTRY=your-docker-registry
DOCKER_IMAGE_TAG=latest

# =================================================================
# THIRD-PARTY SERVICES
# =================================================================

# Calendly Integration
CALENDLY_TOKEN=your-calendly-token

# Zoom Integration
ZOOM_CLIENT_ID=your-zoom-client-id
ZOOM_CLIENT_SECRET=your-zoom-client-secret

# Slack Integration
SLACK_BOT_TOKEN=your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# =================================================================
# SECURITY HEADERS
# =================================================================

# CSP Configuration
CSP_ENABLED=true
CSP_DEFAULT_SRC="'self'"
CSP_SCRIPT_SRC="'self' 'unsafe-inline' 'unsafe-eval'"
CSP_STYLE_SRC="'self' 'unsafe-inline'"

# =================================================================
# EXPERIMENTAL FEATURES
# =================================================================

# Experimental Features (use with caution)
EXPERIMENTAL_AI_FEATURES=false
EXPERIMENTAL_REAL_TIME_SYNC=true
EXPERIMENTAL_ADVANCED_ANALYTICS=false

