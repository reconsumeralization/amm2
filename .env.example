# ModernMen Barbershop - Environment Variables
# Copy this file to .env.local and fill in your actual values
# For production, copy to .env.production

# =============================================================================
# DATABASE CONFIGURATION (Choose one based on your setup)
# =============================================================================
# PostgreSQL (Recommended for Payload CMS)
DATABASE_URL=postgresql://localhost:5432/modernmen

# MongoDB (Alternative - uncomment if using MongoDB)
# DATABASE_URI=mongodb+srv://username:password@cluster.mongodb.net/modernmen?retryWrites=true&w=majority

# =============================================================================
# PAYLOAD CMS
# =============================================================================
PAYLOAD_SECRET=your-super-secret-payload-key-here
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3000

# =============================================================================
# NEXT.JS & AUTHENTICATION
# =============================================================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# =============================================================================
# STRIPE PAYMENT PROCESSING
# =============================================================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# =============================================================================
# OPENAI AI INTEGRATION
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# =============================================================================
# GOOGLE CALENDAR INTEGRATION
# =============================================================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback/google

# =============================================================================
# BUNNY CDN (IMAGE STORAGE & DELIVERY)
# =============================================================================
BUNNY_API_KEY=your-bunny-api-key
BUNNY_STORAGE_ZONE=your-storage-zone-name
BUNNY_PULL_ZONE=your-pull-zone-name

# =============================================================================
# EMAIL NOTIFICATIONS (SMTP)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# =============================================================================
# REDIS (CACHING & RATE LIMITING)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_ENVIRONMENT=production
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# LogRocket Session Recording
NEXT_PUBLIC_LOGROCKET_APP_ID=your-logrocket-app-id

# Monitoring Configuration
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_TRACKING=true
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
NODE_ENV=production
DEBUG=payload:*
LOG_LEVEL=info

# =============================================================================
# SECURITY & RATE LIMITING
# =============================================================================
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_AI_FEATURES=true
ENABLE_GOOGLE_CALENDAR_SYNC=true
ENABLE_STRIPE_PAYMENTS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_CHATBOT=true
ENABLE_HAIR_SIMULATOR=true
ENABLE_LOYALTY_PROGRAM=true

# =============================================================================
# MULTI-TENANT CONFIGURATION
# =============================================================================
DEFAULT_TENANT_ID=default-tenant
ENABLE_MULTI_TENANCY=true

# =============================================================================
# IMAGE OPTIMIZATION
# =============================================================================
MAX_IMAGE_SIZE=5242880
IMAGE_QUALITY=80
ENABLE_WEBP=true
ENABLE_AVIF=false

# =============================================================================
# CORS & SECURITY HEADERS
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_CREDENTIALS=true

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
MAINTENANCE_MODE=false

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================
CACHE_TTL=3600
ENABLE_COMPRESSION=true
ENABLE_MINIFICATION=true

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/app.log
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# =============================================================================
# TESTING
# =============================================================================
JEST_WORKERS=4
TEST_DATABASE_URL=postgresql://localhost:5432/modernmen-test
TEST_STRIPE_KEY=sk_test_test_key

# =============================================================================
# DEPLOYMENT
# =============================================================================
VERCEL_URL=your-app.vercel.app
VERCEL_ENV=production
DEPLOYMENT_REGION=us-east-1

# =============================================================================
# CUSTOM DOMAIN (if using)
# =============================================================================
CUSTOM_DOMAIN=yourdomain.com
SSL_CERT_PATH=/path/to/ssl/cert
SSL_KEY_PATH=/path/to/ssl/key

# =============================================================================
# BACKUP STORAGE (optional)
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-backup-bucket

# =============================================================================
# MONITORING SERVICES (optional)
# =============================================================================
UPTIME_ROBOT_API_KEY=your-uptime-robot-key
NEW_RELIC_LICENSE_KEY=your-new-relic-key
DATADOG_API_KEY=your-datadog-key

# =============================================================================
# SOCIAL MEDIA INTEGRATION (optional)
# =============================================================================
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
INSTAGRAM_ACCESS_TOKEN=your-instagram-token
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# =============================================================================
# SMS NOTIFICATIONS (optional)
# =============================================================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# MAPS & LOCATION (optional)
# =============================================================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# =============================================================================
# WEATHER INTEGRATION (optional)
# =============================================================================
OPENWEATHER_API_KEY=your-openweather-api-key
WEATHER_API_KEY=your-weather-api-key

# =============================================================================
# CUSTOM INTEGRATIONS (optional)
# =============================================================================
CUSTOM_API_ENDPOINT=https://api.your-service.com
CUSTOM_API_KEY=your-custom-api-key
WEBHOOK_URL=https://your-webhook-endpoint.com

# =============================================================================
# NOTES
# =============================================================================
# 1. Replace all placeholder values with your actual credentials
# 2. Keep this file secure and never commit it to version control
# 3. Use different keys for development, staging, and production
# 4. Regularly rotate your API keys and secrets
# 5. Monitor your API usage and costs
# 6. Set up proper backup and monitoring for production
# 7. Configure SSL certificates for HTTPS in production
# 8. Set up proper DNS records for your custom domain
# 9. Configure CDN settings for optimal performance
# 10. Set up proper logging and error tracking
