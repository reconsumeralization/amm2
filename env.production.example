# ModernMen Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# =============================================================================
# REQUIRED VARIABLES (Must be set for production)
# =============================================================================

# Database
DATABASE_URI=mongodb+srv://username:password@cluster.mongodb.net/modernmen?retryWrites=true&w=majority

# Payload CMS
PAYLOAD_SECRET=your-super-secret-payload-key-here

# Authentication
NEXTAUTH_SECRET=your-nextauth-secret-key-here
NEXTAUTH_URL=https://yourdomain.com

# Stripe (Payment Processing)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# OpenAI (AI Features)
OPENAI_API_KEY=sk-your_openai_api_key_here

# =============================================================================
# RECOMMENDED VARIABLES (Highly recommended for production)
# =============================================================================

# Google Calendar Integration
GOOGLE_CLIENT_ID=your_google_oauth_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# Email Service (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Bunny CDN (Image Optimization)
BUNNY_API_KEY=your_bunny_cdn_api_key
BUNNY_STORAGE_ZONE=your_storage_zone_name

# =============================================================================
# OPTIONAL VARIABLES (Nice to have)
# =============================================================================

# Environment
NODE_ENV=production
LOG_LEVEL=info

# Monitoring & Analytics
SENTRY_DSN=https://your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Social Media Integration
FACEBOOK_APP_ID=your_facebook_app_id
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# SMS Notifications (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# DEPLOYMENT NOTES
# =============================================================================

# 1. Replace all placeholder values with your actual credentials
# 2. Never commit this file to version control
# 3. Use different keys for development and production
# 4. Test all integrations before going live
# 5. Monitor logs after deployment

# =============================================================================
# SECURITY CHECKLIST
# =============================================================================

# ✅ All secrets are at least 32 characters long
# ✅ Database URI uses SSL/TLS
# ✅ Stripe keys are live keys (not test keys)
# ✅ Email uses app-specific passwords
# ✅ All API keys have proper permissions
# ✅ Webhook secrets are properly configured
